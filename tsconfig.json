{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["dom", "es2016"],
    "jsx": "react",
    "strictNullChecks": true
  },
  "include": ["./src/**/*", "types", "types/custom.d.ts"],
  "paths": {
    "*": ["./types/*"]
  }
}
